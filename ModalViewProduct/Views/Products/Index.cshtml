@model IEnumerable<ModalViewProduct.Models.Product>



@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="#" class="btn btn-primary" onclick="NewProduct()" id="btnNew">New Product</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>

                <a href="#" class="btn btn-primary" onclick="EditProduct(@item.ID)" id="btnEdit">Edit</a>
                <a href="#" class="btn btn-primary" onclick="DeleteProduct(@item.ID)" id="btnDelete">Delete</a>

                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }, new {  id = "btnEdit", @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { data_modal = "", id = "btnDetail", @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { data_modal = "", id = "btnDelete", @class = "btn btn-primary" })
                *@
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>

            </div>
            <div class="modal-body" id="myModalBodyDiv1">


            </div>


        </div>

    </div>

</div>


@section Scripts
{
    <script>
        
        
          
          
        var EditProduct = function (employeeId) {
            var url = "/Products/Edit?id=" + employeeId; 
            $("#myModalBodyDiv1").load(url, function () {
                $("#MyModal").modal("show");

            })

        }


        var DeleteProduct = function (employeeId) {
            
            var url = "/Products/Delete?id=" + employeeId;


            $("#myModalBodyDiv1").load(url, function () {
                $("#MyModal").modal("show");

            })

        }


        var NewProduct = function () {

            var url = "/Products/Create";
            $("#myModalBodyDiv1").load(url, function () {
                $("#MyModal").modal("show");

            })

        }


    </script>
}